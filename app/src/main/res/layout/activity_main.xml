<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.projects.waseem.comp4382ndassignment.MainActivity">
    <LinearLayout
        android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <GridLayout
            android:id="@+id/buttonGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:orientation="horizontal"
            android:rowCount="6"
            android:layout_gravity="center">


            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_column="0"
                android:layout_row="0"
                android:nestedScrollingEnabled="false"
                android:onClick="clearAll"
                android:text="C" />

            <Button
                android:id="@+id/mc"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_column="1"
                android:layout_row="0"
                android:onClick="clearMemory"
                android:text="MC" />

            <Button
                android:id="@+id/mr"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_column="2"
                android:layout_row="0"
                android:onClick="recallMemory"
                android:text="MR" />

            <Button
                android:id="@+id/mplus"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_column="3"
                android:layout_row="0"
                android:onClick="addMemory"
                android:text="M+" />

            <Button
                android:id="@+id/back"
                android:layout_width="175dp"
                android:layout_height="70dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="1"
                android:onClick="backLastInp"
                android:text="Back" />

            <Button
                android:id="@+id/n"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_column="2"
                android:layout_row="1"
                android:onClick="negateNum"
                android:text="N" />

            <Button
                android:id="@+id/div"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_column="3"
                android:layout_row="1"
                android:onClick="divNum"
                android:text="/" />

            <Button
                android:id="@+id/num7"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_column="0"
                android:layout_row="2"
                android:onClick="num7"
                android:text="7" />

            <Button
                android:id="@+id/num8"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_column="1"
                android:layout_row="2"
                android:onClick="num8"
                android:text="8" />

            <Button
                android:id="@+id/num9"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_column="2"
                android:layout_row="2"
                android:onClick="num9"
                android:text="9" />

            <Button
                android:id="@+id/mult"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_column="3"
                android:layout_row="2"
                android:onClick="multNum"
                android:text="*" />

            <Button
                android:id="@+id/num4"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_column="0"
                android:layout_row="3"
                android:onClick="num4"
                android:text="4" />

            <Button
                android:id="@+id/num5"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_column="1"
                android:layout_row="3"
                android:onClick="num5"
                android:text="5" />

            <Button
                android:id="@+id/num6"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_column="2"
                android:layout_row="3"
                android:onClick="num6"
                android:text="6" />

            <Button
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_column="3"
                android:layout_row="3"
                android:onClick="subtractNum"
                android:text="-" />

            <Button
                android:id="@+id/num1"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_column="0"
                android:layout_row="4"
                android:onClick="num1"
                android:text="1" />

            <Button
                android:id="@+id/num2"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_column="1"
                android:layout_row="4"
                android:onClick="num2"
                android:text="2" />

            <Button
                android:id="@+id/num3"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_column="2"
                android:layout_row="4"
                android:onClick="num3"
                android:text="3" />

            <Button
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_column="3"
                android:layout_row="4"
                android:onClick="addNum"
                android:text="+" />

            <Button
                android:id="@+id/num0"
                android:layout_width="265dp"
                android:layout_height="70dp"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:layout_row="5"
                android:onClick="num0"
                android:text="0" />

            <Button
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_column="3"
                android:layout_row="5"
                android:onClick="result"
                android:text="=" />
        </GridLayout>
    </LinearLayout>
</RelativeLayout>
